{
    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },
    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    {
                        "cache": false,
                        "helpers": "config:dust.helpers",
                        "whitespace": true
                    }
                ]
            }
        }
    },
    "middleware": {
        "appsec": {
            "module": {
                "__note": "disable CSRF",
                "arguments": [
                    {
                        "xframe": "SAMEORIGIN",
                        "p3p": false,
                        "csp": false
                    }
                ]
            }
        },
        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        "template": {
                            "module": "construx-dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates"
                        },
                        "css": {
                            "module": "construx-less",
                            "files": "/css/**/*.css"
                        },
                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        }
    }
}